[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RF
[alias]
	diffz = diff --color=auto
	logz = log --pretty=format:'%h - %ad %an | %s' --date=short
	logz2 = log --decorate --oneline
	statz = status -sb
	showz = show --name-only
	blamez = blame --date=short
    treez =log --graph --oneline --all
[color]
	ui = auto

[push]
	default = simple
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch

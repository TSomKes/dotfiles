[core]
	editor = vim
	excludesfile = ~/.gitignore
	pager = diff-so-fancy | less --tabs=4 -RF
[alias]
	diffz = diff --color=auto
	logz = log --pretty=format:'%h - %ad %an | %s' --date=short
	logz2 = log --decorate --oneline
	statz = status -sb
	showz = show --name-only
	blamez = blame --date=short
    treez =log --graph --oneline --all
[color]
	ui = true
[color "diff"]
    meta       = "11"
    frag       = "magenta bold"
    func       = "146 bold"
    commit     = "yellow bold"
    old        = "red bold"
    new        = "green bold"
    whitespace = "red reverse"
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
    oldNormal    = "red bold"
    oldHighlight = "red bold 52"
    newNormal    = "green bold"
    newHighlight = "green bold 22"
[push]
	default = simple
[init]
	defaultBranch = main
[interactive]
	diffFilter = diff-so-fancy --patch
